<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsPaperActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:background="@color/main_color"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="NetBd"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_below="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/newspaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:textSize="15dp"
            android:text="Bangla News Paper"
            android:textAllCaps="false"
            android:textColor="#292525" />



        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_below="@+id/newspaper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/amadersomoy"
                android:layout_width="165dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="80dp"
                    android:src="@drawable/amadersomoy"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/kalerkantho"
                android:layout_width="165dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="80dp"
                    android:src="@drawable/kalerkantho"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


            <RelativeLayout
                android:layout_below="@id/rel1"
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ittefaq"
                    android:layout_width="165dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="15dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:layout_width="165dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ittefak"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/somokal"
                    android:layout_width="165dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:layout_width="165dp"
                        android:layout_height="80dp"
                        android:src="@drawable/somokal"/>
                </androidx.cardview.widget.CardView>
    </RelativeLayout>




        <RelativeLayout
            android:layout_below="@id/rel2"
            android:id="@+id/rel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/noyadigonto"
                android:layout_width="165dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="80dp"
                    android:src="@drawable/noyadigonto"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/jugantor"
                android:layout_width="165dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="80dp"
                    android:src="@drawable/jugantor"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@id/rel3"
            android:id="@+id/rel4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/jonokhonto"
                android:layout_width="165dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="80dp"
                    android:src="@drawable/jnokhonto"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/thedailystar"
                android:layout_width="165dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="80dp"
                    android:src="@drawable/thedailystar"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@id/rel4"
            android:id="@+id/rel5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/manobkhontho"
                android:layout_width="165dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="76dp"
                    android:src="@drawable/manobkhontho" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/deshrupantor"
                android:layout_width="165dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="80dp"
                    android:src="@drawable/deshrupantor"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/rel5"
            android:id="@+id/rel6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/vorercagog"
                android:layout_width="165dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="76dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/vorercagag1" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/sangram"
                android:layout_width="165dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sangram"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </RelativeLayout>

    </ScrollView>



</RelativeLayout>